<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333335"
    tools:context=".fragments.SettingsFragment"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/settingHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/accountSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCOUNT SETTINGS"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/settingHeader"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@id/accountSettings"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry" />
    <EditText
        android:id="@+id/personAge"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="number"
        android:hint="Age"
        app:layout_constraintTop_toBottomOf="@id/accountSettings"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/my_border"
        android:gravity="center_vertical"
        android:padding="15dp"
        tools:ignore="Autofill,HardcodedText" />
    <EditText
        android:id="@+id/personUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="@Username"
        app:layout_constraintTop_toBottomOf="@id/personName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="Autofill,RtlSymmetry" />
    <EditText
        android:id="@+id/personEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:hint="E-mail ID"
        app:layout_constraintTop_toBottomOf="@id/personUsername"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry" />
    <EditText
        android:id="@+id/personDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@id/personEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/profilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE PHOTO"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/personDesc"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/changePic"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_margin="25dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="CHANGE PICTURE"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto"
        android:focusable="true"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/removePic"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="REMOVE PICTURE"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePic"
        android:focusable="true"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/pp_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personDesc"
        android:clickable="true"
        tools:ignore="ContentDescription,KeyboardInaccessibleWidget" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:text="LOGOUT"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>