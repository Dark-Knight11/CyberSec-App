    <EditText
        android:id="@+id/personName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@id/accountSettings"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"

        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>
    <EditText
        android:id="@+id/personUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="@Username"
        app:layout_constraintTop_toBottomOf="@id/personName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"

        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>
    <EditText
        android:id="@+id/personEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:hint="E-mail ID"
        app:layout_constraintTop_toBottomOf="@id/personUsername"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"

        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>
    <EditText
        android:id="@+id/personDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@id/personEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/my_border"

        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>