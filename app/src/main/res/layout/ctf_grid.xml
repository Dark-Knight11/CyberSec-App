<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252424"
        android:padding="16dp">
        <TextView
            android:id="@+id/label_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starts on:"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE START TIME WILL APPEAR HERE"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/label_start"/>
        <TextView
            android:id="@+id/main_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HERE IS THE LINK"
            android:layout_marginStart="4dp"
            android:textColor="#E3000B"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            tools:ignore="HardcodedText"
            android:layout_centerInParent="true"
            android:layout_below="@id/label_start"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <TextView
            android:id="@+id/label_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Ends on:"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_below="@id/main_link"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE END TIME WILL APPEAR HERE"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_below="@id/main_link"
            android:layout_toRightOf="@id/label_end"/>

        <RelativeLayout
            android:id="@+id/description_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_end"
            android:visibility="gone">
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description will appear here"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_below="@id/divider"/>
        </RelativeLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>